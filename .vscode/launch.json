{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Main",
            "type": "python",
            "request": "launch",
            "program": "./src/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "BATCH_SIZE": "5"
            }
        },
        {
            "name": "Python: Stress Tests",
            "type": "python",
            "request": "launch",
            "program": "./scripts/stress_tests.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "pathMappings": ["./src"]
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "pathMappings": ["./src"]
        }
    ]
}